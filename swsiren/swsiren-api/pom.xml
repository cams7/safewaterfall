				<os>
					<family>Windows</family>
				</os>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>dev</name>
				</property>
			</activation>
			<properties>
				<spring.profiles.active>dev</spring.profiles.active>
				<spring.datasource.url>jdbc:h2:file:C:/Dev/My/Safewaterfall/db/h2/swsiren;DB_CLOSE_ON_EXIT=FALSE</spring.datasource.url>
				<spring.datasource.username>sa</spring.datasource.username>
				<spring.datasource.password></spring.datasource.password>
				<spring.datasource.driver-class-name>org.h2.Driver</spring.datasource.driver-class-name>
				<server.port>8280</server.port>
				<MANAGER_URL>http://localhost:8180</MANAGER_URL>
				<SERIAL_PORT>COM6</SERIAL_PORT>
				<SERIAL_BAUD_RATE>9600</SERIAL_BAUD_RATE>
				<SERIAL_THREAD_TIME>500</SERIAL_THREAD_TIME>
				<HTTP_TIMEOUT>5000</HTTP_TIMEOUT>
				<REDIS_ADDRESS>172.42.42.220:6579</REDIS_ADDRESS>
				<SIREN_ID>0134c0a8-d6ad-4107-94b4-fee84f7ced17</SIREN_ID>
				<QUARTZ_DRIVER_DELEGATE_CLASS>org.quartz.impl.jdbcjobstore.StdJDBCDelegate</QUARTZ_DRIVER_DELEGATE_CLASS>
				<QUARTZ_DS_URL>jdbc:h2:file:C:/Dev/My/Safewaterfall/db/h2/swsiren;INIT=RUNSCRIPT FROM 'classpath:/org/quartz/impl/jdbcjobstore/tables_h2.sql'</QUARTZ_DS_URL>
			</properties>
