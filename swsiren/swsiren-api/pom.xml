	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.13.RELEASE</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>br.com.cams7.safewaterfall</groupId>
	<artifactId>swsiren</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Safe Waterfall Siren</name>
	<description>Application Safe Waterfall Siren</description>

	<properties>
		<user.name>César A. Magalhães</user.name>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyyMMdd'T'HHmmss
		</maven.build.timestamp.format>

		<java.version>1.8</java.version>
		<swagger2.version>2.9.2</swagger2.version>
		<spring.jpa.hibernate.ddl-auto>none</spring.jpa.hibernate.ddl-auto>
		<spring.jpa.properties.hibernate.show_sql>true</spring.jpa.properties.hibernate.show_sql>
		<spring.jpa.properties.hibernate.format_sql>true</spring.jpa.properties.hibernate.format_sql>
	</properties>

	<dependencies>
		<dependency>
			<groupId>br.com.cams7.safewaterfall</groupId>
			<artifactId>swarduino</artifactId>
			<version>${project.version}</version>
